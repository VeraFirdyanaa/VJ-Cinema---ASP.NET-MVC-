@model VJCinema.Models.Customer
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Create", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.nameCustomer)
        @Html.TextBoxFor(m => m.nameCustomer, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Birthdate)
        <label>Date of Birth</label>
        @*@Html.CheckBoxFor(m => m.Birthdate, new { @class = "form-control" })*@
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m .IsSubscribedToNewsletter) Subscribed to Newsletter ? 
        </label>
    </div>
}